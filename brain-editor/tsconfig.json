{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "react-jsx",
        "outDir": "./dist/",

        "incremental": true,
        // "tsBuildInfoFile": "./.build/.tsbuildinfo",

        "strict": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "isolatedModules": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "useUnknownInCatchVariables": false,
        "verbatimModuleSyntax": true,

        "baseUrl": "./",

        "paths": {
            "@app/*": ["./src/app/*"],
            "@shared/*": ["./src/shared/*"],
            "@assets/*": ["./assets/*"],
            "@mui/material": ["./node_modules/@mui/joy"],
            // "*": ["node_modules/*"]
        },

        "lib": [
            "ESNext",
            "ESNext.AsyncIterable",
            "ESNext.Promise",
            "ESNext.String",
            "ESNext.Symbol",
            "DOM",
            "DOM.Iterable",
            "ScriptHost"
        ]
    },
    "include": [
        "./src/types/**/*",
        "./src/app/**/*",
        "./src/shared/**/*",
        "./src/electron/**/*",
        "./assets/**/*",
        "./.eslintrc.cjs",
        "./electron-builder.js",
        "./*.config.*"
    ]
}
